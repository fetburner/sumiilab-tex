TARGET = slide
USEPDFLATEX = true
PDFLATEX = lualatex
PDFLATEXFLAGS = --kanji=utf8 -interaction=nonstopmode -halt-on-error

# 変更を監視するファイル
TEXDEPS[] = $(TARGET).tex beamerthemesumiilab.sty $(glob i,images/*.pdf)

.PHONY: all clean

LaTeXDocument($(TARGET), $(TARGET))

.DEFAULT: $(TARGET).pdf

# beamericon*.pdf はカレントディレクトリに存在しなくても、勝手に読み込まれるが、
# OMake がそのことを認識せず、カレントディレクトリに存在することを仮定するため、
# 以下の生成ルールが無いと、コンパイルに失敗する（場当たり的対処）。
beamericon%.pdf:
	cp $(shell kpsewhich $*.pdf) .

clean:
	rm -f *.acn *.acr *.alg *.aux *.bbl *.blg *.dvi *.fdb_latexmk *.glg *.glo *.gls *.idx *.ilg *.ind *.ist *.lof *.log *.lot *.maf *.mtc *.mtc0 *.nav *.nlo *.out *.pdfsync *.ps *.snm *.synctex.gz *.toc *.vrb *.xdy *.tdo *.fls beamericon*.pdf
