%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%% Headline
%%

\setbeamercolor{headline}{fg=white,bg=structure}
\setbeamerfont{title in headline}{size=\LARGE,series=\bfseries}
\setbeamerfont{author in headline}{size=\large}
\setbeamerfont{institute in headline}{size=\normalsize}

\setbeamertemplate{headline}{%
  \leavevmode

  \begin{beamercolorbox}[wd=\textwidth]{headline}
    \begin{columns}[T]
      \begin{column}{.02\paperwidth}
      \end{column}
      \begin{column}{.96\paperwidth}
        \vskip4ex
        \centering
        \usebeamercolor{title in headline}{%
          \usebeamerfont{title in headline}{\inserttitle}}\\[2ex]
        \usebeamercolor{author in headline}{%
          \usebeamerfont{author in headline}{\insertauthor}}\\[1ex]
        \usebeamercolor{institute in headline}{%
          \usebeamerfont{institute in headline}{\insertinstitute}}
      \end{column}
      \begin{column}{.02\paperwidth}
      \end{column}
    \end{columns}
    \vskip1.5ex
  \end{beamercolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%% Blocks
%%

\definecolor{MidnightBlue}{cmyk}{1,1,0,0}
\setbeamercolor{structure}{fg=MidnightBlue}

\setbeamercolor{block title}{fg=white,bg=structure}
\setbeamerfont{block title}{series=\bfseries,size=\large}
\setbeamercolor{block body}{bg=structure!10}

\setbeamercolor{block title example}{fg=white,bg=OliveGreen}
\setbeamerfont{block title example}{series=\bfseries,size=\large}
\setbeamercolor{block body example}{bg=OliveGreen!10}

\setbeamercolor{block title alerted}{fg=white,bg=red}
\setbeamerfont{block title alerted}{series=\bfseries,size=\large}
\setbeamercolor{block body alerted}{bg=red!10}

%%% BLOCK WIDTH ADJUSTMENT
%%%
%%% `block' environments have widths larger than `wd' option because
%%% their 0.75ex inner margins are not included in `wd'.

%% Usage: \addtobeamertemplate{<element-name>}{<pre-text>}{<post-text>}
\addtobeamertemplate{block begin}
  {\begin{columns}[onlytextwidth]
   \begin{column}[t]{.75ex}\end{column}%% left margin .75ex
   \begin{column}{\textwidth-1.5ex}}{}
\addtobeamertemplate{block end}{}
  {\end{column}
   \begin{column}[t]{.75ex}\end{column}%% right margin .75ex
   \end{columns}}

\addtobeamertemplate{block alerted begin}
  {\begin{columns}[onlytextwidth]
   \begin{column}[t]{.75ex}\end{column}%% left margin .75ex
   \begin{column}{\textwidth-1.5ex}}{}
\addtobeamertemplate{block alerted end}{}
  {\end{column}
   \begin{column}[t]{.75ex}\end{column}%% right margin .75ex
   \end{columns}}

\addtobeamertemplate{block example begin}
  {\begin{columns}[onlytextwidth]
   \begin{column}[t]{.75ex}\end{column}%% left margin .75ex
   \begin{column}{\textwidth-1.5ex}}{}
\addtobeamertemplate{block example end}{}
  {\end{column}
   \begin{column}[t]{.75ex}\end{column}%% right margin .75ex
   \end{columns}}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%% Itemize, Enumerate
%%

\setbeamertemplate{itemize item}[circle]
\setbeamertemplate{itemize subitem}[triangle]
\setbeamertemplate{itemize subsubitem}[square]
\setbeamertemplate{enumerate item}[circle]
\setbeamerfont{itemize/enumerate body}{size=\normalsize}
\setbeamerfont{itemize/enumerate subbody}{size=\normalsize}
\setbeamerfont{itemize/enumerate subsubbody}{size=\small}

